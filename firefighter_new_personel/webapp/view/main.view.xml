<mvc:View controllerName="firefighternewpersonel.controller.main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
           <f:Form id="FormChange354" editable="true">
						<f:layout>
							<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false"/>
						</f:layout> 
						<f:formContainers>
							<f:FormContainer >
								<f:formElements>
									<f:FormElement label="Personel Name">
										<f:fields>
											<Input  placeholder="Enter Personel Name" id="Pnme" required="true"></Input>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="Personel Surname">
										<f:fields>
											<Input  placeholder="Enter Personel Surname" id="Psurnme" required="true"/>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="Department">
										<f:fields>
											<Input  placeholder="Enter Department" id="Dptment" required="true"/>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="Date">
										<f:fields>
											<DateTimePicker displayFormat="long" change="handleChange" class="sapUiSmallMarginBottom" id="fdate" required="true"/>
										</f:fields>
									</f:FormElement>
									<f:FormElement label=" ">
										<f:fields>
											<Button text="Save" type="Accept" press="onSave"/>
											<Button text="Cancel" type="Reject"/>
										</f:fields>
									</f:FormElement>
								</f:formElements>
							</f:FormContainer>
						</f:formContainers>
					</f:Form>
            </content>
        </Page>
    </mvc:View>
